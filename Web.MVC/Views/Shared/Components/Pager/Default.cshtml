@model PagerViewModel

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-start">
        <li class="page-item">
            <a class="page-link" href="/Home?page=@(Model.Page -1)">Önceki</a>
        </li>
        @{
            string cssClass = "";
            for (int i = 1; i <= Model.TotalPage; i++)
            {
                if (Model.Page < i - 2 || Model.Page > i + 2)
                {
                    <li class="page-item">.</li>
                    continue;
                }
                if (Model.Page == i)
                    cssClass = "navbar-inverse";
                <li class="page-item"><a class="page-link @cssClass" href="/Home?page=@i">@i</a></li>
                cssClass = "";
            }
        }
        <li class="page-item">
            <a class="page-link" href="/Home?page=@(Model.Page +1)">Sonraki</a>
        </li>

        @*<li class="page-item"><a class="page-link" href="/Home?Page=1">1</a></li>
        <li class="page-item"><a class="page-link" href="/Home?Page=2">2</a></li>
        <li class="page-item"><a class="page-link" href="/Home?Page=3">3</a></li>*@

    </ul>
</nav>